# MDMC SmartLink PostgreSQL Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@hostname:5432/database_name
DATABASE_SSL=false

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-minimum-64-characters-use-openssl-rand-hex-32
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=10

# Application Settings
PUBLIC_DOMAIN=mdmcmusicads.com
PUBLIC_BASE_URL=https://mdmcmusicads.com
NODE_ENV=development
PORT=3003

# Backend API (existing)
BACKEND_URL=https://mdmcv7-backend-production.up.railway.app

# Odesli Configuration
ODESLI_API_URL=https://api.song.link/v1-alpha.1
ODESLI_CACHE_TTL=86400000
ODESLI_RATE_LIMIT=10

# Admin User (for initial setup)
ADMIN_EMAIL=admin@mdmcmusicads.com
ADMIN_PASSWORD=admin123

# Optional: External Services
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Development Only
DEBUG=false