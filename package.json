{
  "name": "mdmc-admin",
  "version": "2.0.0",
  "description": "MDMC SmartLinks - PostgreSQL + Odesli Integration",
  "main": "server.js",
  "scripts": {
    "start": "npm run db:ensure && node server.js",
    "dev": "nodemon server.js",
    "db:ensure": "node scripts/ensure-db.js",
    "build": "echo 'Interface admin HTML/CSS/JS - Pas de build nécessaire'",
    "deploy": "npm run build && echo 'Prêt pour déploiement sur admin.mdmcmusicads.com'",
    "db:setup": "node scripts/setup.js",
    "db:migrate": "psql $DATABASE_URL < schema.sql",
    "db:seed": "node scripts/seed.js",
    "db:reset": "psql $DATABASE_URL -c 'DROP SCHEMA public CASCADE; CREATE SCHEMA public;' && npm run db:migrate",
    "test:odesli": "node scripts/test-odesli.js",
    "cache:clean": "node scripts/clean-cache.js",
    "user:create": "node scripts/create-user.js",
    "user:create:cli": "node scripts/create-user-cli.js",
    "admin:create": "node scripts/create-super-admin.js",
    "setup:production": "node scripts/setup-production.js"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cloudinary": "^2.7.0",
    "cookie": "^0.6.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^6.0.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "node-fetch": "^2.7.0",
    "nodemailer": "^7.0.9",
    "pg": "^8.11.3",
    "ua-parser-js": "^1.0.37"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/pg": "^8.10.9",
    "nodemon": "^2.0.20"
  },
  "keywords": [
    "mdmc",
    "smartlinks",
    "admin",
    "music",
    "marketing",
    "postgresql",
    "odesli"
  ],
  "author": "MDMC Music Ads",
  "license": "ISC"
}
